extends bootstrap

block header
  ul.nav.navbar-nav.navbar-right
    li
      a(href="https://github.com/wschrader/wafflestats")
        i.fa.fa-github.fa-lg
        | &nbsp; WAFFLEStats on Github

block content
  .container-fluid
    .container
      if (error && error.length > 0)
        .alert.alert-danger.alert-dismissable
          button.close(type="button", data-dismiss="alert", aria-hidden="true") &times;
          i.fa.fa-frown-o.fa-lg &nbsp;
          strong= error
      if (success && success.length > 0)
        .alert.alert-success.alert-dismissable
          button.close(type="button", data-dismiss="alert", aria-hidden="true") &times;
          i.fa.fa-smile-o.fa-lg &nbsp;
          strong= success
      p.introduction
        h1 Welcome to WAFFLEStats
        
      p
        ul
          li Live data pulled directly from Wafflepool every 60 seconds!
          li Historical viewing of hashrate and balances at different resolutions from 1 hour to 1 month old.
          li Stores data locally for historical overview from anywhere at any time.
          li WAFFLES will only update and save data while there is a browser open on your stats page.
          li Mobile friendly website!
      
      br
      
      h4 To get started, just enter the bitcoin address used on Wafflepool and hit go.

    .container
      p.address
        form(role="address", name="stats", action="/stats", method="get")
          .form-inline
            label.sr-only(for="address") Bitcoin Address
            input.form-control(type="text", placeholder="Bitcoin Address", id="address", name="address", size="45")
            button.btn.btn-success(type="submit" value="Go") Go
            
    .container     
      #metrics.panel-group
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a(data-toggle="collapse", data-parent="#metrics", href="#collapseMetrics")
                i.fa.fa-arrow-down
                | &nbsp; WAFFLES Usage Metrics
                small &nbsp; Click to expand...
          #collapseMetrics.panel-collapse.collapse
            .panel-body
              table.table.table-striped
                tr
                  th.col-xs-4
                  th.col-xs-4 Total
                  th.col-xs-4 Last 24 Hours
                tr
                  th Unique Addresses:
                  td#total_addresses 0
                  td
                tr
                  th Database Size:
                  td#databaseSize 0
                  td
                tr
                  th Average DB Object Size:
                  td#dbObjectSize 0
                  td
                tr
                  th Index Size:
                  td#indexSize 0
                  td
                tr
                  th First Datapoint:
                  td#firstDatapoint
                  td
                tr
                  th Total Datapoints:
                  td#lifetime_totalDatapoints 0
                  td#last24_totalDatapoints 0
                tr
                  th Datapoints/second:
                  td#lifetime_dps 0
                  td#last24_dps 0
                tr
                  th Average Hashrate:
                  td#lifetime_averageHashrate 0
                  td#last24_averageHashrate 0
                tr
                  th Maximum Hashrate:
                  td#lifetime_maximumHashrate 0
                  td#last24_maximumHashrate 0
                tr
                  th Average Sent:
                  td#lifetime_averageSent 0
                  td#last24_averageSent 0
                tr
                  th Maximum Sent:
                  td#lifetime_maximumSent 0
                  td#last24_maximumSent 0
        
block scripts
  script(src='/javascripts/index.js')